{
  "extends": ["eslint:recommended", "prettier"],
  "env": {
    "browser": true,
    "es6": true
  },
  "plugins": ["prettier", "sort-exports", "import"],
  "globals": {
    "chrome": "readonly",
    "page": "readonly"
  },
  "parserOptions": {
    "sourceType": "module"
  },
  "rules": {
    "comma-dangle": ["error", "never"],
    "prettier/prettier": "error",
    "no-return-await": "error",
    "sort-exports/sort-exports": ["error", { "sortDir": "asc" }]
  }
}
